<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="?attr/rippleColor"
    >
    <item android:id="@android:id/mask">
        <shape android:shape="rectangle">
            <solid android:color="?attr/rippleColor" />
            <corners android:radius="50dp" />
        </shape>
    </item>

    <item android:id="@android:id/background">
        <shape
            android:shape="rectangle">
            <corners android:radius="50dp"/>
            <padding android:left="4dp" android:right="4dp" android:top="4dp" android:bottom="4dp" />
            <stroke android:width="2dp" android:color="?attr/colorControlNormal" />
        </shape>
    </item>
</ripple>